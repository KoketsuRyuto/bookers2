<h2>User info</h2>
<table>
  <thead>
    <tr>
      <th><%= image_tag @user.get_profile_image(100,100) %></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>introduction</td>
      <td><%= @user.introduction %></td>
    </tr>
  </tbody>
</table>

<% if @user.id == current_user.id %>
  <%= link_to "プロフィール編集", edit_user_path(current_user) %>
<% end %>

<h2>Users</h2>

<table>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(current_user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>