<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <p><%= render 'layouts/error', obj: @book %></p>
      <%= form_with model: @book do |f| %>
        <div class="form-group">
          <label class="book_title">Title</label>
          <%= f.text_field :title, id: "book_title", class: "form-control" %>
        </div>
        <div class="form-group">
          <label class="book_opinion">Opinion</label>
          <%= f.text_area :body, id: "book_opinion", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class: "btn btn-success" %>
        </div>
        <%= link_to 'show', book_path(@book.id) %>
        |
        <%= link_to 'back', '/books' %>
        
      <% end %>
    </div>
  </div>
</div>