<h2>Book detail</h2>

<table>
  <tbody>
      <td></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <% if @book.user == current_user %>
        <td><%= link_to "Edit", edit_book_path %></td>
        <td><%= link_to "Destroy", book_path(@book), method: :delete, "deta-confirm" => "本当に消しますか？" %></td>
      <% end %>
  </tbody>
</table>
