<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <td></td>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<h2>New Book</h2>
<%= form_with model: @book do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  
  <p>Opinion</p>
  <%= f.text_area :body %>
  
  <%= f.submit "Create Book" %>
<% end %>